    "@vercel/ncc": "0.38.2",
    "husky": "8.0.3",
    "inquirer": "^9.3.7",
    "lint-staged": "14.0.1",
    "semver": "^7.6.0",
    "typescript": "5.6.3",
    "vite": "4.3.9",
    "vitest": "0.34.6",
    "zx": "^7.2.3"
